    "AAC", "AC3", "DTS", "Atmos", "TrueHD", "DD5.1", "5.1", "7.1", "DTS-HD",
    "HDR", "HDR10", "HDR10+", "DolbyVision", "SDR", "10bit", "8bit",
    "Extended", "Unrated", "Remastered", "REPACK", "PROPER", "iNTERNAL", "LiMiTED",
    "YIFY", "YTS", "RARBG", "SPARKS", "NF", "AMZN", "HULU", "WEB"
